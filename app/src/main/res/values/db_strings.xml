        CREATE TABLE IF NOT EXISTS %1$s (
            %2$s DOUBLE,
            %3$s DOUBLE,
            %4$s DOUBLE,
            %5$s DATETIME,
            %6$s TEXT,
            %7$s TEXT,
            %8$s TEXT,
            %9$s TEXT,
            %10$s INTEGER DEFAULT 0
        )
    </string>
